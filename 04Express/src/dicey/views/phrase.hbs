<form method='get'>
	Number of Words:
	<input type='number' name='numWords'>
	Separator:
	<select name='glue'>
		<option value='space'>space ' '</option>
		<option value='dash'>dash '-'</option>
		<option value='comma'>comma ','</option>
		<option value='star'>star '*'</option>
		<option value='none'>none ''</option>
	</select>
	<input type='submit' value='Generate!'>
</form>
<br>
<h2>
	Generated Passphrase:
</h2>
<br><br>
<p style = 'text-align:center;font-size:larger;border:3px; border-style:solid; border-color:red; padding: 1em;'>
	<strong>{{formedPhrase}}</strong>
</p>

<ul>
{{#each nums}}
	<li>{{this}}</li>
{{/each}}
</ul>
<br>
<ul>
{{#each words}}
<li style='li:after{content:'*';margin-left:20px;}'>{{this}}</li>
{{/each}}
</ul>